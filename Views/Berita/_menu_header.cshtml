<section id="features">
    <div class="container">

        <div class="row">
            <div class="col-12">
                <div class="breadcamb">
                    <a asp-controller="Home" asp-action="Index" style="color:grey;">Home</a>
                    <!-- <i style="color:black;" class="fa fa-instagram"></i> -->
                    <label style="color:black;">>></label>
                    <a asp-controller="Berita" asp-action="Index" style="color:black;">News</a>
