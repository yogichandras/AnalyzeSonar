@model RegisterViewModel
<section class="mosh-service-area clearfix">
	<div class="container" style="margin-bottom:10%;">
		<div class="row" style="min-height: 700px;">
			@Html.Partial("_navigation_profile")


			<div class="col-sm-8" style="border: 1px solid grey; padding:10px;">
				<form asp-action="ChangePassword" method="post">
					<div class="row" style="background-color:rgba(144, 14, 14, 0.06);">
						<div class="col-sm-12 text-left">
							<h5 style="Font-Family: Roboto;
font-weight: bold;
Font-Size: 16px;
Line-Height: 19px;
text-align: Left;">
								Ubah Password
							</h5>
						</div>
					</div>
					<div class="row" style="margin-top:2%;">
						<div class="col-sm-12">
							<div class="col-sm-12 text-left">
								<p>Silahkan isi kolom berikut untuk mengubah password lama menjadi password baru Anda</p>
								<p style="@if (ViewBag.status == "failed") { <text> color:red </text>} else {<text> color:blue </text> }">@ViewBag.message</p>

							</div>
							<input type="hidden" name="email" value="@Model.Email" />

							<div class="row" style="margin: 10px auto;">
								<div class="col-sm-4">
									<label for="nama_lengkap">Password Lama</label>


								</div>
								<div class="col-sm-4">
									<div class="form-group text-right">
										<input type="password" class="form-control" name="OldPassword" style="border:1px solid black" data-toggle="tooltip" data-placement="right" title="Password Lama akun anda" required/>
										<a href="#"> Lupa Password?</a>
									</div>
								</div>





							</div>
							<div class="row" style="margin: 10px auto;">
								<div class="col-sm-4">
									<label for="password1">Password Baru</label><br />
									@*<button type="submit" class="btn btn-dark">Simpan</button>*@

								</div>
								<div class="col-md-4">
									<div class="form-group">
										<input type="password" class="form-control" name="NewPassword" style="border:1px solid black" data-toggle="tooltip" data-placement="right" title="Password harus mengandung Kapital, Angka & Karakter Spesial" required/>
									</div>
								</div>






							</div>

							<div class="row" style="margin: 10px auto;">
								<div class="col-sm-4">
									<label for="password1">Konfirmasi Password</label><br />
									<button type="submit" class="btn btn-dark">Simpan</button>

								</div>
								<div class="col-md-4">
									<div class="form-group">
										<input type="password" class="form-control" name="ConfirmPassword" style="border:1px solid black" data-toggle="tooltip" data-placement="right" title="Password harus sama" required />
									</div>
								</div>






							</div>


						</div>

					</div>
				</form>
			</div>

		</div>
	</div>
</section>